{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "required": true,
      "type": "integer"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "mens clothing",
        "womens clothing",
        "kids clothing",
        "electronics",
        "other"
      ]
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "ratings": {
      "type": "decimal",
      "max": 5,
      "min": 0
    },
    "reviews": {
      "type": "integer"
    },
    "subcategory": {
      "type": "enumeration",
      "enum": [
        "featured",
        "popular",
        "new"
      ]
    }
  }
}
